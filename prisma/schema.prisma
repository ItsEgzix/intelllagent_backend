generator client {
  provider        = "prisma-client"
  output          = "../generated/prisma"
  engineType      = "client"
  previewFeatures = []
}

datasource db {
  provider = "postgresql"
}

model Email {
  id        String   @id @default(uuid())
  email     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Customer {
  id             String    @id @default(uuid())
  name           String
  email          String    @unique
  phone          String
  timezone      String    // Customer's timezone
  companyDetails String?   @db.Text // Markdown content about the company
  adminId        String?   // Admin who created/manages this customer
  admin          User?     @relation("CustomerAdmin", fields: [adminId], references: [id], onDelete: SetNull)
  source         String    @default("website") // "website" (self-registered) or "admin" (added by admin)
  level          String    @default("new") // "new", "contacted", "responded", "qualified", "customer"
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  meetings       Meeting[] // Meetings for this customer
}

model Meeting {
  id                String   @id @default(uuid())
  // Customer's time
  customerDate      String   // Date in customer's timezone (YYYY-MM-DD)
  customerTime      String   // Time in customer's timezone (HH:mm)
  customerTimezone  String   // Customer's timezone
  // Agent's time
  agentDate         String?  // Date in agent's timezone (YYYY-MM-DD)
  agentTime         String?  // Time in agent's timezone (HH:mm)
  agentTimezone     String?  // Agent's timezone
  // Relations
  customerId        String
  customer          Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  agentId           String?  // References User.id (admin role users are agents)
  agent             User?    @relation(fields: [agentId], references: [id], onDelete: SetNull)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model User {
  id           String     @id @default(uuid())
  email        String     @unique
  password     String
  name         String?
  role         String     @default("admin") // "admin" or "superadmin"
  isAgent      Boolean    @default(false) // Whether this user is an agent
  timezone     String?    @default("Asia/Kuala_Lumpur") // Timezone for agents
  avatar       String?    // URL or path to avatar image
  isActive     Boolean    @default(true) // For agents to enable/disable
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  meetings     Meeting[]  // Meetings assigned to this agent
  customers    Customer[] @relation("CustomerAdmin") // Customers managed by this admin
}

model Translation {
  id          String   @id @default(uuid())
  code        String   @unique
  data        Json
  nativeName  String?  // Display name in the language itself (e.g., "中文" for Chinese)
  englishName String?  // Display name in English (e.g., "Chinese")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Setting {
  id          String   @id @default(uuid())
  key         String   @unique // Setting key (e.g., "chatbot_enabled")
  value       String   // Setting value (JSON string for complex values, or simple string)
  description String?  // Human-readable description
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}